<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_album_art"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/album_art_content_decription" />

    <TextView
        android:id="@+id/track_View_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_album_art"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/artist_View_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_album_art"
        android:layout_below="@id/track_View_name"
        android:layout_margin="20dp"
        android:textSize="20sp"/>

</RelativeLayout>